<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libraryManagementSystem.controllers.LoginPageController">
   <top>
      <HBox prefHeight="75.0" prefWidth="100.0" style="-fx-background-color: navy blue;" BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="P.E.S. Library Management System" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="600.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="400.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label prefHeight="25.0" prefWidth="125.0" text="Login :">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <ChoiceBox fx:id="loginDropDown" prefHeight="25.0" prefWidth="200.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></ChoiceBox>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </HBox>
            <HBox prefHeight="75.0" prefWidth="100.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Label prefHeight="25.0" prefWidth="200.0" text="Username :">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameId" prefHeight="30.0" prefWidth="250.0" />
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="100.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Label prefHeight="25.0" prefWidth="200.0" text="Password :">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordId" prefHeight="30.0" prefWidth="250.0" />
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="100.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#LoginClick" prefHeight="25.0" prefWidth="200.0" text="Login" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="5.0" />
               </padding>
            </HBox>
            <HBox prefHeight="75.0" prefWidth="100.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Hyperlink fx:id="newUserLink" alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="250.0" text="New User">
                     <font>
                        <Font size="13.0" />
                     </font></Hyperlink>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Hyperlink fx:id="forgotPasswordLink" alignment="CENTER" prefHeight="25.0" prefWidth="250.0" text="Forgot Password ?">
                     <font>
                        <Font size="13.0" />
                     </font></Hyperlink>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
