<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libraryManagementSystem.controllers.StudentPageController">
   <top>
      <HBox prefHeight="75.0" prefWidth="200.0" style="-fx-background-color: navy blue;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <Button fx:id="logoutbutton" mnemonicParsing="false" onAction="#LogoutButtonClick" prefHeight="25.0" prefWidth="60.0" text="Logout" HBox.hgrow="ALWAYS" />
            <Region prefHeight="30.0" prefWidth="118.0" HBox.hgrow="ALWAYS" />
            <Label text="Student Page" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </padding>
         <children>
            <HBox prefHeight="75.0" prefWidth="200.0">
               <children>
                  <Region prefHeight="27.0" prefWidth="102.0" />
                  <Button fx:id="searchBook" mnemonicParsing="false" onAction="#SearchBookButton" prefHeight="25.0" prefWidth="150.0" text="Search Book" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="issuedBook" mnemonicParsing="false" onAction="#IssuedBookClick" prefHeight="25.0" prefWidth="150.0" text="Issued Book" />
                  <Region prefHeight="27.0" prefWidth="99.0" />
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </HBox>
            <HBox prefHeight="75.0" prefWidth="200.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#SubmitButtonClick" prefHeight="25.0" prefWidth="150.0" text="Submit Book" />
                  <Region prefHeight="200.0" prefWidth="200.0" />
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
