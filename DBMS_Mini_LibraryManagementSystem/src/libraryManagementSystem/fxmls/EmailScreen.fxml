<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libraryManagementSystem.controllers.EmailScreenController">
   <top>
      <HBox prefHeight="75.0" prefWidth="200.0" style="-fx-background-color: navy blue;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#BackButtonClick" prefHeight="25.0" prefWidth="50.0" text="Back" HBox.hgrow="ALWAYS" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Label text="Email " textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <TableView prefHeight="900.0" prefWidth="1275.0">
              <columns>
                <TableColumn fx:id="studentNameId" prefWidth="200.0" text="Name Of Student" />
                <TableColumn fx:id="departmentId" prefWidth="200.0" text="Department" />
                  <TableColumn fx:id="yearId" prefWidth="200.0" text="Year" />
                  <TableColumn fx:id="bookNameId" prefWidth="200.0" text="Name Of Book" />
                  <TableColumn fx:id="emailId" prefWidth="200.0" text="Email " />
                  <TableColumn fx:id="issuedDateId" prefWidth="200.0" text="Issued Date" />
                  <TableColumn fx:id="returnDateId" prefWidth="200.0" text="Return Date" />
                  <TableColumn fx:id="contactNumberId" prefWidth="200.0" text="Contact No." />
                  <TableColumn fx:id="fineId" prefWidth="200.0" text="Fine" />
              </columns>
            </TableView>
         </content>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <bottom>
      <HBox prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendMailButton" mnemonicParsing="false" onAction="#SendMailButtonClick" prefHeight="25.0" prefWidth="150.0" text="Send Mail" HBox.hgrow="ALWAYS" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
